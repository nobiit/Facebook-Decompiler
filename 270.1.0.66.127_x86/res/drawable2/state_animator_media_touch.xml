<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="70" android:valueTo="0.85" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="70" android:valueTo="0.85" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="70" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="70" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
</selector>